<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartQuizActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/in_quiz_name"
                android:layout_width="203dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="10dp"
                android:text="Quiz Name"
                android:textAlignment="inherit"
                android:textColor="#393737"
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:textColor="#69CDBB" />

            <TextView
                android:id="@+id/question_name"
                android:layout_width="392dp"
                android:layout_height="96dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="17dp"
                android:fontFamily="@font/roboto"
                android:padding="10dp"
                android:text="Question"
                android:textAlignment="inherit"
                android:textColor="#393737"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/in_quiz_name" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/question_name"
                tools:layout_editor_absoluteX="0dp">

                <Button
                    android:id="@+id/option1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/searchbar_rounded"
                    android:padding="10dp"
                    android:text="Option 1"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/option2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/searchbar_rounded"
                    android:padding="10dp"
                    android:text="Option 2"
                    android:textAlignment="center"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <Button
                    android:id="@+id/option3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/searchbar_rounded"
                    android:padding="10dp"
                    android:text="Option 3"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/option4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/searchbar_rounded"
                    android:padding="10dp"
                    android:text="Option 4"
                    android:textAlignment="center"
                    android:textSize="20dp" />


            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="324dp"
                android:layout_height="41dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/rounded_corners_button"
                android:text="Next"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                tools:fontFamily="@font/roboto" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
    

</RelativeLayout>